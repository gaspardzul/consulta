<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ws.consulta.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar país"
        android:onClick="getCountries"
        android:textSize="8sp"
        android:id="@+id/btnCountry"
        android:layout_alignTop="@+id/txtCode"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtCode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCode"
        android:hint="Código de país (ej. MX, PA, US)"
        android:layout_below="@+id/txtNameCountry"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="--"
        android:id="@+id/txtNameCountry"
        android:textSize="34sp"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
